<?xml version="1.0" encoding="UTF-8"?>
<tabletop xmlns="http://synapse.cs.umd.edu/tabletop-xml" xspan="20" yspan="12">
    <include file="tablesetup/def-box.xml"/>
    <include file="tablesetup/def-screw.xml"/>
    <def name="tube">
        <var name="location" value="(0,0,0)"/>
        <composite location="$location$">
            <cylinder location="(0,0,0)" rotation="(90,0,0)" yspan="4" radius=".3" color="white"/>
            <cylinder location="(0,0,2)" rotation="(90,0,0)" yspan="1" radius=".4" color="yellow"/>
            <cylinder location="(0,0,-2)" rotation="(90,0,0)" yspan="1" radius=".4" color="yellow"/>
        </composite>
    </def>
    <def name="panelbox">
        <instance def="screw">
            <var name="location" value="(-2,.5,12)" />
            <var name="rotation" value="(90,0,0)" />
            <var name="tipLength" value="1" />
            <var name="initBondHostId" value="screwF" />
            <var name="initBondHostTightness" value="2" />
        </instance>
        <composite id="test" location="(0, 0, 0)" mass="10">
            <box
                location="(0, 0, 8)"
                rotation="(90, 0, 0)"
                xspan="10"
                yspan="12"
                zspan="5"
                thickness=".5" />
            <block
                location="(-2, 1.5, 6)"
                xspan="3"
                zspan="5" />
            <instance def="hole">
                <var name="location" value="(-2, 1, 12)" />
                <var name="rotation" value="(90, 0, 0)" />
                <var name="radius" value=".5" />
                <var name="depth" value="6" />
            </instance>
            <indicatorLights
                xspan="2"
                numLights="3"
                lightRadius=".1"
                location="(2,2,12)"
                rotation="(90,0,0)" >
                <state descriptionName="green">
                    <light id="0" color="red"/>
                    <light id="1" color="green"/>
                    <light id="2" color="green"/>
                </state>
            </indicatorLights>
            <instance def="tube"><var name="location" value="(1,1,8)" /></instance>
            <instance def="tube"><var name="location" value="(2,1,8)" /></instance>
            <instance def="tube"><var name="location" value="(3,1,8)" /></instance>
            <composite location="(-2, 1, 6)" rotation="(90,-90,0)">
                <toggleSwitch
                    angle="15"
                    id="toggle"
                    location="(0, 0, 0)"
                    xspan="4" yspan="1" zspan="0.3"
                    numStates="2" initState="0" >
                        <!-- <downstream id="$id$Indicator"/> -->
                </toggleSwitch>
            </composite>

        </composite>
    </def>
